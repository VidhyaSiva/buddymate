{
  "name": "buddy-mate",
  "version": "1.0.0",
  "description": "Companion app for seniors",
  "main": "index.js",
  "scripts": {
    "test": "vitest",
    "test:run": "vitest run",
    "test:unit": "jest --config=src/tests/test-config/comprehensive-test-suite.config.js --selectProjects=\"Unit Tests\"",
    "test:integration": "jest --config=src/tests/test-config/comprehensive-test-suite.config.js --selectProjects=\"Integration Tests\"",
    "test:e2e": "jest --config=src/tests/test-config/comprehensive-test-suite.config.js --selectProjects=\"E2E Tests\"",
    "test:performance": "jest --config=src/tests/test-config/comprehensive-test-suite.config.js --selectProjects=\"Performance Tests\"",
    "test:load": "jest --config=src/tests/test-config/comprehensive-test-suite.config.js --selectProjects=\"Load Tests\"",
    "test:accessibility": "jest --config=src/tests/test-config/comprehensive-test-suite.config.js --selectProjects=\"Accessibility Tests\"",
    "test:security": "jest --testPathPattern=security",
    "test:all": "jest --config=src/tests/test-config/comprehensive-test-suite.config.js",
    "test:coverage": "jest --config=src/tests/test-config/comprehensive-test-suite.config.js --coverage",
    "accessibility:report": "node scripts/generate-accessibility-report.js",
    "performance:report": "node scripts/generate-performance-report.js",
    "load:report": "node scripts/generate-load-report.js",
    "web": "webpack serve --config webpack.config.js",
    "build:web": "webpack --config webpack.config.js --mode production"
  },
  "devDependencies": {
    "@babel/core": "^7.28.0",
    "@babel/preset-env": "^7.28.0",
    "@babel/preset-react": "^7.27.1",
    "@babel/preset-typescript": "^7.27.1",
    "@testing-library/jest-native": "^5.4.3",
    "@testing-library/react-native": "^13.2.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^20.0.0",
    "@types/react": "^19.1.8",
    "@types/react-native": "^0.72.8",
    "@vitejs/plugin-react": "^4.7.0",
    "babel-loader": "^10.0.0",
    "file-loader": "^6.2.0",
    "html-webpack-plugin": "^5.6.3",
    "jest": "^29.7.0",
    "jest-axe": "^8.0.0",
    "jest-html-reporters": "^3.1.7",
    "jest-junit": "^16.0.0",
    "jsdom": "^26.1.0",
    "react-native-web": "^0.20.0",
    "typescript": "^5.0.0",
    "url-loader": "^4.1.1",
    "vite": "^7.0.5",
    "vitest": "^1.0.0",
    "webpack": "^5.100.2",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2"
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/bottom-tabs": "^7.4.2",
    "@react-navigation/native": "^7.1.14",
    "@react-navigation/stack": "^7.4.2",
    "crypto-js": "^4.2.0",
    "date-fns": "^4.1.0",
    "react": "^19.1.0",
    "react-native": "^0.80.1",
    "react-native-audio-recorder-player": "^3.6.12",
    "react-native-safe-area-context": "^5.5.2",
    "react-native-screens": "^4.13.1",
    "react-native-tts": "^4.1.0",
    "react-native-voice": "^0.3.0",
    "zod": "^3.22.0"
  }
}
